{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "gulp",
    "watch-gateway": "gulp --gulpfile ./gateway.gulpfile.js",
    "build": "tsc -b tsconfig.json && gulp copySchema",
    "start": "node ./dist/app.js",
    "gateway": "node ./dist/gateway.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "test": "jest --verbose --detectOpenHandles --maxWorkers=1 --forceExit"
  },
  "keywords": [
    "graphql",
    "API",
    "apollo",
    "typescript",
    "server",
    "client"
  ],
  "author": "%AUTHOR_NAME%",
  "dependencies": {
    "@apollo/federation": "^0.10.2",
    "@apollo/gateway": "^0.10.8",
    "apollo-datasource": "^0.6.3",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server-express": "^2.9.7",
    "apollo-server-testing": "^2.9.7",
    "axios": "^0.19.0",
    "camelcase": "^5.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.2",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "printf": "^0.5.2",
    "sequelize": "^5.21.2",
    "typescript": "^3.6.4",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.28",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.21",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/morgan": "^1.7.37",
    "@types/node-fetch": "^2.5.3",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "graphql-extensions": "^0.10.4",
    "graphql-tag": "^2.10.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__utils",
      "/src/__tests__/e2e"
    ],
    "collectCoverage": true
  }
}

{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "Create graphql api server template",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "gulp",
    "watch-gateway": "gulp --gulpfile ./gateway.gulpfile.js",
    "build": "tsc -b tsconfig.json && gulp copySchema",
    "start": "node ./dist/app.js",
    "gateway": "node ./dist/gateway.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "test": "jest --verbose --detectOpenHandles --maxWorkers=1 --forceExit",
    "sonar": "sonar-scanner -X"
  },
  "keywords": [
    "graphql",
    "API",
    "apollo",
    "typescript",
    "server",
    "client"
  ],
  "author": "Charlie.Lang",
  "dependencies": {
    "@apollo/federation": "^0.10.2",
    "@apollo/gateway": "^0.10.7",
    "apollo-datasource": "^0.3.1",
    "apollo-datasource-rest": "^0.3.2",
    "apollo-server-express": "^2.9.6",
    "apollo-server-testing": "^2.9.6",
    "axios": "^0.19.0",
    "camelcase": "^5.3.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.21.2",
    "jest": "^24.7.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "printf": "^0.5.1",
    "sequelize": "^5.1.0",
    "typescript": "^3.3.3333",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.123",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^2.3.0",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.9.0",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "apollo-link": "^1.2.11",
    "apollo-link-context": "^1.0.18",
    "apollo-link-http": "^1.5.14",
    "eslint": "^5.15.1",
    "eslint-config-google": "^0.12.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-security": "^1.4.0",
    "graphql-extensions": "^0.5.7",
    "graphql-tag": "^2.10.1",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^9.2.5",
    "node-fetch": "^2.3.0",
    "prettier": "^1.18.2",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^24.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__utils",
      "/src/__tests__/e2e"
    ],
    "collectCoverage": true
  }
}

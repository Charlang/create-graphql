{
  "name": "create-apollo-gql",
  "version": "0.1.7",
  "description": "Apollo GraphQL CLI for both server side and client side",
  "main": "./lib/index.js",
  "bin": "./lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Charlang/create-graphql.git"
  },
  "bugs": {
    "url": "https://github.com/Charlang/create-graphql/issues"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r esm src/index.ts",
    "build": "tsc -p .",
    "refresh": "rm -rf ./node_modules ./yarn.lock && yarn install",
    "update:cli": "ncu --packageFile ./package.json -u",
    "update:spa": "ncu --packageFile ./template-client-single-spa/package.json -u",
    "update:cra": "ncu --packageFile ./template-cra/package.json -u",
    "update:server": "ncu --packageFile ./template-server/package.json -u",
    "update:all": "concurrently -k --kill-others-on-fail -p name --names \"cli,spa,cra,server\" \"yarn update:cli\" \"yarn update:spa\" \"yarn update:cra\" \"yarn update:server\""
  },
  "keywords": [
    "apollo",
    "graphql",
    "CLI",
    "node.js",
    "typescript",
    "commander",
    "single-spa",
    "axios",
    "sequelize",
    "express",
    "jest",
    "prettier",
    "gulp",
    "husky"
  ],
  "author": "Charlie.Lang",
  "dependencies": {
    "chalk": "^4.0.0",
    "clear": "^0.1.0",
    "commander": "^5.0.0",
    "esm": "^3.2.25",
    "execa": "^4.0.0",
    "figlet": "^1.3.0",
    "inquirer": "^7.1.0",
    "listr": "^0.14.3",
    "through2": "^3.0.1",
    "vinyl-fs": "^3.0.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/listr": "^0.14.2",
    "@types/through2": "^2.0.34",
    "@types/vinyl-fs": "^2.4.11",
    "concurrently": "^5.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.4",
    "nodemon": "^2.0.3",
    "npm-check-updates": "^4.1.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
